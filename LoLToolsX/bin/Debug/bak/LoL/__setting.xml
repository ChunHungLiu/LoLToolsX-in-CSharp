<?xml version="1.0" encoding="UTF-8"?>
<config>
	<ignore_rule>
		<!-- type 0 is dir, type 1 is file -->
		<rule type="0" value="\Air\logs" /> <!-- type is dir -->
		<rule type="0" value="\Air\preferences" />
		<rule type="0" value="\Game\Config" />
		<rule type="0" value="\Game\Screenshots" />
		<rule type="0" value="\Game\Logs" />
		<rule type="1" value="\Game\DATA\Menu\HUD\*.ini" />
		<rule type="1" value="*.log" /> <!-- it matches all log file in all folder -->
		<rule type="1" value="\Game\Localization_Errors.txt" /> <!-- exclude this file -->

		<rule type="1" value="\lol.version" /> <!-- version file -->
		<rule type="1" value="\uninst.exe" /> <!-- uninstaller, maybe exist -->
		<rule type="1" value="\install.log" /> <!-- install log, maybe exist -->
	</ignore_rule>
	<copy_rule>
		<!-- type 0 is full file copy -->
		<rule type="0" value="*.txt" /> <!-- lol text resource -->
		<rule type="0" value="*.xml" />
	</copy_rule>
</config>